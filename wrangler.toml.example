# Cloudflare Pages + D1 configuration example
# Copy to wrangler.toml and fill in your database_id.
# Or configure via Dashboard: Settings → Functions → D1 database bindings

name = "9arm-ledger"
pages_build_output_dir = ".vercel/output/static"
compatibility_date = "2024-11-01"
compatibility_flags = ["nodejs_compat"]

[[d1_databases]]
binding = "DB"
database_name = "9arm-ledger-db"
database_id = "<YOUR_D1_DATABASE_ID>"

# Environment variables (APP_SECRET, SESSION_TTL_HOURS) must be set in
# Cloudflare Dashboard → Settings → Environment variables
